<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diana.code2040challenge" >

    <uses-sdk android:minSdkVersion="11" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/code2040icon"
        android:label="@string/app_name"
        android:name=".App"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.diana.code2040challenge.SplashScreen" />
        </activity>
        <activity
            android:name=".Stage1"
            android:label="@string/title_activity_stage1"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.diana.code2040challenge.MainActivity" />
        </activity>
        <activity
            android:name=".Stage2"
            android:label="@string/title_activity_stage2"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.diana.code2040challenge.MainActivity" />
        </activity>
        <activity
            android:name=".Stage3"
            android:label="@string/title_activity_stage3"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.diana.code2040challenge.MainActivity" />
        </activity>
        <activity
            android:name=".Stage4"
            android:label="@string/title_activity_stage4"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.diana.code2040challenge.MainActivity" />
        </activity>
    </application>

</manifest>
