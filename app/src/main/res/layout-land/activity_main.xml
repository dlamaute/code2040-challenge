<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="Choose a Stage to Test"
        android:textColor="@color/eblue"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/col1"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        android:layout_marginTop="50sp"
        android:orientation="vertical">

        <Button
            android:id="@+id/s1button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Stage 1"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/eblue"
            android:textSize="20sp"
            android:text="String Reversal"/>

        <Button
            android:id="@+id/s3button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Stage 3"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/eblue"
            android:textSize="20sp"
            android:text="Removing the Prefix"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/col2"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        android:layout_marginTop="50sp"
        android:layout_toRightOf="@id/col1"
        android:orientation="vertical">

        <Button
            android:id="@+id/s2button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Stage 2"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/eblue"
            android:textSize="20sp"
            android:text="Needle in Haystack"/>

        <Button
            android:id="@+id/s4button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Stage 4"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/eblue"
            android:textSize="20sp"
            android:text="Up-date-ing"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="150sp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50sp"
        android:orientation="vertical">

        <Button
            android:id="@+id/resbutton"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_marginTop="70sp"
            android:layout_gravity="center_horizontal"
            android:text="Results"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/eblue"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:text=""/>

    </LinearLayout>

</RelativeLayout>